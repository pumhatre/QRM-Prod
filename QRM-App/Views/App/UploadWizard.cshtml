<div class="x_panel" role="main">
    <div class="">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Upload Wizard</h3>
                </div>
            </div>
            <div ng-app="upload" ng-controller="uploadCtrl" ng-init="init()">

                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_content">
                                Follow the mentioned steps to upload the QRM sheet.
                                <div class="container">
                                    <step-tabs options="stepTabsOptions" callback="nextClick(msg)"></step-tabs>
                                    <div class="row setup-content margin-top15px" id="step-1">
                                        <div class="col-xs-6 col-md-offset-3">
                                            <div class="col-md-12">
                                                <form novalidate name="projectDetailsForm" role="form" class="form-horizontal">
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Project</label>
                                                        <div class="col-sm-10">
                                                            <select class="form-control" ng-model="projectDetails.selectedProjectDropdown" ng-change="getProjectReleases(projectDetails.selectedProjectDropdown)" ng-required="true">
                                                                <option value="">Select a Project</option>
                                                                <option ng-repeat="project in projectsDropdown" value="{{project.Value}}">{{project.Text}}</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Month</label>
                                                        <div class="col-sm-10">
                                                            <select ng-model="projectDetails.month" class="form-control" ng-required="true">
                                                                <option value="">Select a Month</option>
                                                                <option ng-repeat="option in months" value="{{option.MonthId}}">{{option.MonthName}}</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Release</label>
                                                        <div class="col-sm-10">
                                                            <select class="form-control" ng-model="projectDetails.selectedReleaseDropdown" ng-required="true">
                                                                <option value="">Select a Release</option>
                                                                <option ng-repeat="release in releaseDropdown" value="{{release.ProjectReleaseId}}">{{release.ReleaseName}}</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <button class="btn btn-green nextBtn btn-md pull-right" type="button" ng-disabled="projectDetailsForm.$invalid">Next</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row setup-content" id="step-2">
                                        <div class="col-xs-6 col-md-offset-3">
                                            <div class="col-md-12">
                                                <form novalidate name="uploadDetailsForm" role="form" class="form-horizontal">
                                                    <div class="form-group">
                                                        <upload-file></upload-file>
                                                    </div>
                                                    <div class="col-sm-12">
                                                        <button class="btn btn-green nextBtn btn-md pull-right" type="button" >Next</button>
                                                        <button class="btn btn-primary previousBtn btn-md pull-right" type="button">Previous</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row setup-content margin-top15px"  id="step-3">
                                        <div class="col-md-12">
                                            <form novalidate name="dataSanityForm" role="form" class="form-horizontal">
                                                <div ng-hide="InvalidData">Data Sanity Completed successfully.All the records are valid.</div>
                                                <h3>Dev Effort Data</h3>
                                                <table border="1" ng-show="dataSanityResult.effortSanityValidatonModel.length">
                                                        <tr>
                                                            
                                                            <th>Task Type</th>
                                                            <th>Status</th>
                                                            <th>Component Type</th>
                                                            <th>Widget Type</th>
                                                            <th>Complexity</th>
                                                            <th>CMMIRollUp</th>
                                                            @*<th>ReviewType</th>*@
                                                            
                                                        </tr>
                                                    <tbody>
                                                        <tr ng-repeat="dataSanityEntity in dataSanityResult.effortSanityValidatonModel track by $index">
                                                            <td>{{dataSanityEntity.TaskType}}</td>                                                            
                                                            <td>{{dataSanityEntity.Status}}</td>
                                                            <td>{{dataSanityEntity.ComponentType}}</td>
                                                            <td>{{dataSanityEntity.WidgetType}}</td>
                                                            <td>{{dataSanityEntity.Complexity}}</td>
                                                            <td>{{dataSanityEntity.CMMIRollUp}}</td>
                                                            @*<td>{{dataSanityEntity.ReviewType}}</td>*@
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <div class="col-sm-12">
                                                    <button class="btn btn-green btn-md pull-right" ng-disabled="InvalidData" ng-click="InsertDetailData()" ng-hide="HideFinalize"  type="button">Finalize</button>
                                                    @*<button class="btn btn-green btn-md pull-right"  ng-click="InsertDetailData()" type="button">Finalize</button>*@
                                                </div>
                                            </form>
                                        </div>
                                        
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>