<div class="x_panel" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Metric Reports</h3>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="tab_content2" aria-labelledby="Project-tab">

            <div class="x_panel">
                <div class="x_content" style="align-content:center;">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_content">
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label class="control-label col-md-3 col-sm-3 col-xs-2">Project Name</label>
                                <div class="col-md-3">
                                    <select class="form-control" ng-model="selectedProjectReleaseDropdown" ng-change="getProjectReleases(selectedProjectReleaseDropdown)">
                                        <option value="">Select a Project</option>
                                        <option ng-repeat="project in projectsDropdown" value="{{project.Value}}">{{project.Text}}</option>
                                    </select>
                                </div>
                                <div class="col-md-3"></div>
                            </div>
                            <br>
                            <br>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label class="control-label col-md-3 col-sm-3 col-xs-2">Month</label>
                                <div class="col-md-3">
                                    <select ng-model="projectDetails.month" class="form-control" ng-required="true">
                                        <option value="">Select a Month</option>
                                        <option ng-repeat="option in months" value="{{option.MonthId}}">{{option.MonthName}}</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <label class="control-label col-md-3 col-sm-3 col-xs-2">Release</label>
                                <div class="col-md-3">
                                    <select class="form-control" ng-model="selectedReleaseDropdown">
                                        <option ng-repeat="release in releaseDropdown" value="{{release.ProjectReleaseId}}">{{release.ReleaseName}}</option>
                                    </select>
                                </div>
                                <div class="col-md-3"></div>
                            </div>
                            <br>
                            <br>
                            <div class="row">
                                <div class="col-md-offset-7">
                                    <button class="btn btn-green nextBtn btn-md" type="button" ng-click="getHealthReport(selectedProjectReleaseDropdown,selectedReleaseDropdown,projectDetails.month)">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="healthReportModal" ng-show="HideShow">
        <div role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#tab_projectEffort" ng-click="LoadProjectEffortByProject()" target="_self" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Project Effort Dashboard</a>
                </li>
                <li role="presentation" class="">
                    <a href="#tab_ProjectTesting" ng-click="LoadProjectTestingByProject()" role="tab" target="_self" id="Project-tab" data-toggle="tab" aria-expanded="false">Project Testing Dashboard</a>
                </li>
                <li role="presentation" class="">
                    <a href="#tab_ProjectDefects" ng-click="LoadProjectDefectByProject()" role="tab" target="_self" id="Project-tab" data-toggle="tab" aria-expanded="false">Project Defects Dashboard</a>
                </li>
                <li role="presentation" class="">
                    <a href="#tab_projectWidget" ng-click="LoadProjectWidgetByProject()" role="tab" target="_self" id="Project-tab" data-toggle="tab" aria-expanded="false">Project Widget Dashboard</a>
                </li>
                <li role="presentation" class="">
                    <a href="#tab_projectPerformance" ng-click="LoadProjectPerformanceByProject()" role="tab" target="_self" id="Project-tab" data-toggle="tab" aria-expanded="false">Project Metrics Dashboard</a>
                </li>
            </ul>
            <div id="myTabcontent" class="tab-content">
